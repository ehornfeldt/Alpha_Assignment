@model AddProjectViewModel

<div class="modal fade" id="addProjectModal" tabindex="-1" aria-labelledby="addProjectModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title fs-5" id="exampleModalLabel">Add Project</h3>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Projects" asp-action="AddProject" novalidate>
                    <div class="modal-img">
                        <img src="assets/modal-image.svg" alt="modal image" />
                    </div>

                    <div class="modal-form">
                        <div class="form-group">
                            <label class="form-label" asp-for="ProjectName"></label>
                            <input class="form-control" asp-for="ProjectName" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="ClientId"></label>
                            <select class="form-control" asp-for="ClientId" asp-items="Model.Clients">
                                <option value="" disabled selected>Select client</option>
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" id="add-project-description" class="hide-text-area"></textarea>
					        <div id="add-project-description-wysiwyg-editor" class="wysiwyg-editor form-control"></div>
					        <div id="add-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar form-control">
                                </">
                                <span class="ql-formats">
                                    <button class="ql-bold"></button>
                                    <button class="ql-italic"></button>
                                    <button class="ql-underline"></button>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-align" value=""></button>
                                    <button class="ql-align" value="center"></button>
                                    <button class="ql-align" value="right"></button>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-list" value="bullet"></button>
                                    <button class="ql-list" value="ordered"></button>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-link"></button>
                                </span>
                            </div>
                        </div>

                        <div class="date-pickers">
                            <div class="form-group">
                                <label class="form-label" asp-for="StartDate"></label>
                                <input id="startDate" class="form-control" asp-for="StartDate" />
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="EndDate"></label>
                                <input id="startDate" class="form-control" asp-for="EndDate" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Budget"></label>
                            <div class="budget">
                                <img class="dollar-icon" src="assets/dollar-icon.svg" alt="dollar icon" />
                                <input type="text" class="form-control budget-form" asp-for="Budget" aria-label="Amount (to the nearest dollar)" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ValidationScript")